{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "src/**/*.ejs"],
  "exclude": ["dist", "node_modules"]
}
